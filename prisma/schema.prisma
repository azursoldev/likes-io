  pagePath    String   // e.g., "/", "/instagram/likes", "all"
  link        String?  // e.g., "#", "https://example.com"
  nofollow    Boolean  @default(false)
  
  @@index([featuredOnId])
  @@map("featured_on_page_links")
}

model PlatformSection {
