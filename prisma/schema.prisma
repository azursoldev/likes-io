model PromoBar {
  id              String   @id @default(cuid())
  messages        Json     // Array of strings
  countdownSeconds Int?
  isVisible       Boolean  @default(true)
  displayOrder    Int      @default(0)
  updatedAt       DateTime @updatedAt
  
  @@map("promo_bar")
}

model FeaturedOn {
  id          Int      @id @default(autoincrement())
  brandName   String
