  isActive    Boolean  @default(true)
  
  @@map("influence_section")
}

model AdvantageSection {
  id          Int      @id @default(autoincrement())
  title       String
  subtitle    String
  items       Json     // Array of {icon, title, desc}
  isActive    Boolean  @default(true)
  
  @@map("advantage_section")
}

model QuickStartSection {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  buttons     Json     // Array of {href, label, icon}
  isActive    Boolean  @default(true)
  
  @@map("quick_start_section")
}

// Service Page Content
model ServicePageContent {
  id              Int      @id @default(autoincrement())
  platform        Platform
  serviceType     ServiceType
  slug            String?  @unique
  metaTitle       String?
  metaDescription String?
  heroTitle       String
  heroSubtitle    String
  heroRating      String?
  heroReviewCount String?
  assuranceCardText String?
  packages        Json     // Package configurations
  qualityCompare  Json?    // Quality comparison data
  howItWorks      Json?     // Steps array
  isActive        Boolean  @default(true)
  updatedAt       DateTime @updatedAt
  
  @@unique([platform, serviceType])
  @@index([platform, serviceType])
  @@map("service_page_content")
}

// FAQ Management
model FAQ {
  id          Int         @id @default(autoincrement())
  question    String
  answer      String
  category    String?
  platform    Platform?
  serviceType ServiceType?
  displayOrder Int        @default(0)
  isActive    Boolean     @default(true)
  createdAt   DateTime    @default(now())
  
  @@index([category])
  @@index([platform, serviceType])
  @@index([displayOrder])
  @@map("faqs")
}

// Testimonials & Reviews
model Testimonial {
  id          Int      @id @default(autoincrement())
  handle      String
  role        String
  text        String
  rating      Int?
  platform    Platform?
  serviceType ServiceType?
  isApproved  Boolean  @default(false)
  isFeatured  Boolean  @default(false)
  displayOrder Int     @default(0)
  createdAt   DateTime @default(now())
  
  @@index([isApproved])
  @@index([isFeatured])
  @@index([platform])
  @@index([displayOrder])
  @@map("testimonials")
}

model Review {
  id          Int      @id @default(autoincrement())
  userId      String
  orderId     String?
  rating      Int
  comment     String?
  isApproved  Boolean  @default(false)
  isPublished Boolean  @default(false)
  createdAt   DateTime @default(now())
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  order       Order?   @relation(fields: [orderId], references: [id], onDelete: SetNull)
  
  @@index([userId])
  @@index([isApproved])
  @@index([isPublished])
  @@map("reviews")
}

// Blog Management
model BlogPost {
  id            Int      @id @default(autoincrement())
  title         String
  slug          String   @unique
  excerpt       String?
  content       String   @db.Text
  featuredImage String?
  authorId      String
  category      String?
  tags          Json?    // Array of strings
  publishedAt   DateTime?
  isPublished   Boolean  @default(false)
  seoMeta       Json?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  author        User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  
  @@index([slug])
  @@index([isPublished])
  @@index([category])
  @@index([publishedAt])
  @@map("blog_posts")
}

// Team Management
model TeamMember {
  id          Int      @id @default(autoincrement())
  name        String
  role        String
  bio         String?  @db.Text
  photo       String?
  socialLinks Json?    // {twitter, linkedin, etc.}
  displayOrder Int     @default(0)
  isActive    Boolean  @default(true)
  
  @@index([displayOrder])
  @@map("team_members")
}

// Social Proof
model SocialProof {
  id          Int      @id @default(autoincrement())
  handle      String
  item        String
  time        String
  platform    Platform?
  isActive    Boolean  @default(true)
  displayOrder Int     @default(0)
  
  @@index([isActive])
  @@index([displayOrder])
  @@map("social_proof")
}

// Notifications/Banners
model Notification {
  id          Int      @id @default(autoincrement())
  title       String
  message     String
  type        String   // "info" | "warning" | "success" | "error"
  isVisible   Boolean  @default(true)
  targetPages Json?    // Array of page paths
  scheduledAt DateTime?
  expiresAt   DateTime?
  displayOrder Int     @default(0)
  createdAt   DateTime @default(now())
  
  @@index([isVisible])
  @@index([scheduledAt])
  @@index([expiresAt])
  @@map("notifications")
}

// Currency Rates
model CurrencyRate {
  id          Int      @id @default(autoincrement())
  fromCurrency String
  toCurrency   String
  rate         Float
  updatedAt    DateTime @updatedAt
  
  @@unique([fromCurrency, toCurrency])
  @@index([fromCurrency, toCurrency])
  @@map("currency_rates")
}

// Icon/Asset Management
model IconAsset {
  id          Int      @id @default(autoincrement())
  name        String
  category    String?
  url         String
  alt         String?
  displayOrder Int     @default(0)
  createdAt   DateTime @default(now())
  
  @@index([category])
  @@index([displayOrder])
  @@map("icon_assets")
}

// Email Templates
model EmailTemplate {
  id          Int      @id @default(autoincrement())
  name        String
  subject     String
  body        String   @db.Text
  variables   Json?    // Array of available variables
  type        String   // "order_confirmation" | "payment_success" | etc.
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([type])
  @@index([isActive])
  @@map("email_templates")
}

// SEO Settings
model SEOSettings {
  id              Int      @id @default(autoincrement())
  page            String   @unique // Page path or identifier
  title           String?
  description     String?
  keywords        String?
  ogImage         String?
  ogTitle         String?
  ogDescription   String?
  twitterCard     String?
  structuredData  Json?
  updatedAt       DateTime @updatedAt
  
  @@index([page])
  @@map("seo_settings")
}

